<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2><%= t "layouts.header.update" %></h2>

    <%= form_for [:admin, @user] do |f| %>

      <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name, disabled: true, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email, disabled: true, class: "form-control" %>
      </div>

      <div class="form-group" >
        <%= f.select :role,
        options_for_select({admin: :admin, normal: :normal}), {} ,
          class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t("layouts.header.update"), class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
