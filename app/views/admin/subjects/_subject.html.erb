<tr id="sub_<%= subject.id %>" >
  <td><%= subject.id %></td>
  <td><%= subject.name %></td>
  <td class="col-md-4" data-no-turbolink='true' >
    <%= link_to t("admin.subject.edit"), edit_admin_subject_path(subject.id),
      class: "btn btn-primary col-md-3 col-md-offset-2" %>
    <%= link_to t("admin.subject.destroy"), admin_subject_path(subject.id),
      remote: true, method: :delete, data: {confirm: t("confirm")},
      class: "btn btn-primary col-md-3 col-md-offset-3" %>
  </td>
</tr>
