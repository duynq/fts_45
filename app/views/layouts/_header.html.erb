<header class="navbar navbar-fixed-top" >
  <div class="container" >
    <nav>
      <ul class="nav navbar-nav navbar-right" >
        <% if user_signed_in? %>
          <li>
            <%= link_to t("layouts.header.home"), authenticated_root_path %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layouts.header.account" %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.profile"), "#" %></li>
              <li><%= link_to t("layouts.header.setting"),
                edit_user_registration_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts.header.logout"),
                  destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t("layouts.header.home"), unauthenticated_root_path %>
          </li>
          <li>
            <%= link_to t("layouts.header.signup"), new_user_registration_path %>
          </li>
          <li>
            <%= link_to t("layouts.header.signin"), new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
